<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/Image_nets"
            android:layout_width="70dp"

            android:layout_height="70dp" />

        <TextView
            android:id="@+id/view_net_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Image_nets"
            android:padding="20dp"
            android:text="UBL COMPLEX" />

        <TextView
            android:id="@+id/view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_net_cat"
            android:layout_toRightOf="@id/Image_nets"
            android:paddingLeft="30dp"
            android:text="6:29 AM" />

        <ImageView
            android:id="@+id/going_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:layout_marginRight="@id/view_net_cat"

            />

        <TextView
            android:id="@+id/view_going"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/going_icon"
            android:layout_marginRight="10dp"
            android:text="2 going" />
    </RelativeLayout>
</layout>